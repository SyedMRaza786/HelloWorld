{% extends "layout.html" %}


{% block content %}

<script>
</script>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Discard edits?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to discard?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
        <a href="{{'/view?id=%s'%element.number}}">
            <button type="button" class="btn btn-primary">Yes</button>
        </a>
      </div>
    </div>
  </div>
</div>

<div class="col-6 pt-4">
    <h2>Edit inventory</h2>
    <hr/>
</div>
<form method="post" action="{{'/edit?id=%s'%element.number}}" class="col-6">
    <div class="form-group">
        <label for="element">Element</label>
        <h6>{{element.name}}</h6>
    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input value="{{quantity}}" required class="form-control" id="quantity" name="quantity" min="0">
    </div>
    <div class="form-group">
        <label for="lab">Lab</label>
        <input value="{{lab}}" minlength="1" required class="form-control" id="lab" name="lab">
    </div>
    <div class="form-group">
        <label for="notes">Safety Notes</label>
        <textarea style="height: 120px" minlength="1" required class="form-control" id="notes" name="notes">{{note}}</textarea>
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
    <button class="btn btn-danger" type="button" data-toggle="modal" data-target="#exampleModal">Discard</button>
</form>

{% endblock %}