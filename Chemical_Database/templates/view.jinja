{% extends "layout.html" %}


{% block content %}
<script>
    let element = {{ element| tojson}}
</script>

<div class="container row mb-4 mt-4">
    <div class="row">
        <div class="col-6">
            <div class="row center">
                <h1 class="col">{{element.name}}</h1>
                <div class="col">
                </div>
            </div>
            <div style="border: black">
                <img src="{{element.bohr_model_image}}" alt="{{element.name}}" class="img-fluid" style="height: 200px">
            </div>
            <h6>{{element.summary}}</h6>
        </div>
        <div class="col-6">
            <div class="row center default-gap">
                <div class="row col-12 center">
                    <h4 class="col-4">Quantity</h4>
                    <div class="col">
                        <h4>{{quantity}} {{unit}}</h4>
                    </div>
                </div>
                <div class="row col-12 center">
                    <h4 class="col-4">Location</h4>
                    <div class="col">
                        {% if lab != 'None'%}
                            <a href="{{'/search?q=%s'%lab}}" class="btn btn-success">
                                <h4>{{lab}}</h4>
                            </a>
                        {% else %}
                            <button class="btn btn-success">
                                <h4>{{lab}}</h4>
                            </button>
                        {% endif %}
                    </div>
                </div>
                <div class="row col-12">
                    <h4 class="col-4">Safety Note:</h4>
                    <h4 class="col">
                        {% set list1 = note.split('\n') %}
                        {% for item in list1 %}
                            {{ item }}
                            <br/>
                        {% endfor %}
                    </h4>
                </div>
                <div class="col-12 center">
                    <a href="{{'/edit?id=%s'%element.number}}">
                        <button class="btn btn-success">Edit</button>
                    </a>
                    
                </div>
            </div>
            <hr />
            

            <div class="row center default-gap">
                <div class="row col-12 center">
                    <h5 class="col-4">Properties</h5>
                    <div class="col">
                        {% for prop in properties %}
                        <a href="{{'/search?q=%s'%prop}}" class="btn btn-info mb-2 small-btn">
                            {{prop}}
                        </a>
                        {% endfor %}
                    </div>
                </div>
                <div class="row col-12 center">
                    <h5 class="col-4">Discovered by</h5>
                    <div class="col">
                        <a href="{{'/search?q=%s'%element.discovered_by}}" class="btn btn-outline-dark small-btn">
                            {{element.discovered_by}}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

</div>
{% endblock %}